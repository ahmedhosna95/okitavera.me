fea(name)
  .fea-{name}
    display inline-block
    width 1em !important
    height 1em !important
    background-image fea-ico(name + '.svg')
    background-position center
    background-size 1em !important
    background-repeat no-repeat
    opacity .7
    &.fea-inv
      filter invert(100%)

