.bg-accent
  background-color $colorAccent

.bg-accent-half
  halfground $colorAccent

.bg-accentlight-half
  halfground lighten($colorAccent, 50%)

for i in (0 .. 4)
  .bg-light{i}
    background-color $colorLight[i]
  .bg-dark{i}
    background-color $colorDark[i]
  .bg-light{i}-half
    halfground $colorLight[i]
  .bg-dark{i}-half
    halfground $colorDark[i]
