$colorBlue = #6196cc
$colorCyan = #a7e7ff
$colorGreen = #8ddb66
$colorYellow = #eed53d
$colorRed = #ee81a2
$colorViolet = #aa7ee3

code,
pre
  background none
  color #ccc
  text-align left
  white-space pre
  word-spacing normal
  word-wrap normal
  word-break normal
  tab-size 4
  hyphens none
  letter-spacing 1px
  font-size 12px
  font-family $font_mono
  line-height 1.5
  cursor text

/* Code blocks */
pre
  overflow auto
  margin 0.5em 0
  padding 2em 3em

:not(pre) > code,
pre
  background $colorDark[1]

/* Inline code */
:not(pre) > code
  padding 3px 6px
  background $colorLight[1]
  color inherit
  white-space normal

.token.comment,
.token.block-comment,
.token.prolog,
.token.doctype,
.token.cdata
  color $colorLight[4]

.token.punctuation
  color $colorLight[3]

.token.tag,
.token.attr-name,
.token.namespace,
.token.deleted
  color $colorRed

.token.function-name
  color $colorBlue

.token.boolean,
.token.number,
.token.function
  color $colorYellow

.token.property,
.token.class-name,
.token.constant,
.token.symbol
  color $colorYellow

.token.selector,
.token.important,
.token.atrule,
.token.keyword,
.token.builtin
  color $colorRed

.token.string,
.token.char,
.token.attr-value,
.token.regex,
.token.variable
  color $colorViolet

.token.operator,
.token.entity,
.token.url
  color $colorCyan

.token.italic
  font-style italic

.token.entity
  cursor help

.token.inserted
  color $colorGreen
