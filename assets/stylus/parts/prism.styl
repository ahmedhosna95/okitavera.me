code,
pre
  background none
  color #ccc
  text-align left
  white-space pre
  word-spacing normal
  word-wrap normal
  word-break normal
  tab-size 1
  hyphens none
  letter-spacing 1px
  font-size 12px
  font-family $font_mono
  line-height 1.5
  cursor text

/* Code blocks */
pre
  overflow auto
  margin .5em 0
  padding 2em 3em

:not(pre) > code,
pre
  background saturation(darken($colorPurple, 65%), 8%)

/* Inline code */
:not(pre) > code
  padding 3px 6px
  background $colorLight[1]
  color inherit
  white-space normal

.token.bold
  font-weight bold

.token.italic
  font-style italic

.token.comment
  color $colorLight[4]

.token.prolog,
.token.string
  color $colorLight[1]

.token.important
  color lighten($colorPink, 40%)
  font-weight bold

.token.variable
  color lighten($colorYellow, 40%)

.token.number,
.token.selector
  color lighten($colorPurple, 40%)

.token.operator,
.token.entity,
.token.url
  color lighten($colorBlue, 40%)

.token,
.token.keyword,
.token.builtin,
.token.tag,
.token.char
  color lighten($colorPink, 40%)

.token.regex,
.token.atrule,
.token.punctuation,
.token.attr-value
  color lighten($colorGreen, 40%)

.token.class-name,
.token.boolean,
.token.constant,
.token.property,
.token.symbol
  color lighten($colorOrange, 40%)

.token.deleted,
.token.function,
.token.namespace
  color lighten($colorRed, 40%)
