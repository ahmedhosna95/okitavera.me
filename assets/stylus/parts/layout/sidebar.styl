.sidebar
  z-index 10
  min-width --sidebar-maxwidth
  width 35%
  background-color $altDark[0]
  color $colorLight[0]
  &__wrapper
    position sticky
    top 0
    display flex
    flex-direction column
    justify-content center
    margin 0 0 0 auto
    padding-top 0
    padding-bottom 0
    min-height 100vh
    max-width --sidebar-maxwidth
    .row
      flex-basis 100%
      width 100%
      a
        margin-right 1rem
  &__menu
    font-size 1.5rem
    a>i
      margin-right 10px
    a
      color $colorLight[1]
      &:hover
        color $colorAccent
  &__title
    text-transform uppercase
    font-weight 900
    font-size 2.4rem
    line-height 1.2

@media screen and (max-width: --flexbox-breakpoint)
  .sidebar
    min-width unset
    width 100%
    border-right 0
    border-bottom 1px solid lighten($colorLight[4], 50%)
    text-align center
    &__wrapper
      flex-direction column
      flex-wrap wrap
      align-content center
      padding-top 2rem
      padding-bottom 2rem
      min-height unset
      max-width unset
    &__title
      margin 5px
      font-size 1.8rem
    &__desc
      margin 5px
      font-size 1rem
    &__menu
      a>i
        display none
      div
        display inline
    .row
      flex 0 0 auto
      flex-basis auto
      align-self center
      width auto

.me
  position relative
  display inline-block
  border-radius 50%
  line-height 1
  img
    display inline
    border-radius 50%
    line-height 1

@media screen and (max-width: --flexbox-breakpoint)
  .me
    img
      width 90px
      height 90px
