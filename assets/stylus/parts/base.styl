*,
*:after,
*:before
  box-sizing inherit
  font-family inherit // fix fonts still not using webfonts

html
  clear-gaps()
  box-sizing border-box
  font-weight 400
  font-size 14px
  line-height unit((@font-size / 8), '')
  scroll-behavior smooth

body
  clear-gaps()
  display flex
  flex 1
  flex-direction row
  min-height 100vh
  background-color white
  color $colorDark[2]

@media screen and (max-width: --flexbox-breakpoint)
  body
    flex-direction column

blockquote
  position relative
  display inline-block
  margin 0 1rem 1rem 0
  padding .2rem 3rem
  background $colorLight[0]
  box-shadow 0 1px 1px rgba($colorDark[0], .1)
  font-style italic

blockquote::before
  position absolute
  top -10px
  left 10px
  color lighten($colorAccent, 30%)
  content '\201C'
  font-size 4em

blockquote span
  display block
  margin-top .5em
  color $colorDark[1]
  text-align right
  font-size 80%

hr
  margin 1rem 0
  border none
  border-top 1px solid $colorLight[3]

dl,
ol,
ul
  margin-top 0
  padding-left 0
  list-style none
  dl,
  ol,
  ul
    margin 1rem 0 1rem 2rem
    font-size 90%

ol
  list-style decimal inside

ul
  list-style circle inside

fieldset,
input,
select,
textarea
  margin-bottom 1.5rem

blockquote,
dl,
figure,
form,
ol,
p,
pre,
table,
ul
  margin-bottom 1rem

p
  max-width 100%
  word-wrap break-word
  img
    max-width 100%

h1,
h2,
h3,
h4,
h5,
h6
  display block
  vertical-align middle
  font-weight normal

h1
  margin .67em 0
  font-size 2em

h2
  margin .83em 0
  font-size 1.5em

h3
  margin 1em 0
  font-size 1.17em

h4
  margin 1.33em 0
  font-size 1em

h5
  margin 1.67em 0
  font-size .83em

h6
  margin 2.33em 0
  font-size .7em

small
  font-size .8em

a
  color $colorAccent
  text-decoration none
  &:focus,
  &:hover
    color $colorDark[2]

[class^='fea-']
  display inline-block
  width 1em
  height 1em
  background-position center
  background-size 1em
  background-repeat no-repeat
  opacity .7
