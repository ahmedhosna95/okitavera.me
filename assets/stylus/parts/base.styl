*,
*:after,
*:before
  box-sizing inherit
  font-family inherit // fix fonts still not using webfonts

html,
body
  clear-gaps()
  display flex
  flex-direction column
  box-sizing border-box
  min-height 100vh
  background-color white
  color $colorDark[2]
  font-weight 400
  font-size 15px
  line-height unit((@font-size / 8), '')
  scroll-behavior smooth

blockquote
  position relative
  display inline-block
  margin 0 1rem 1rem 0
  padding .2rem 3rem
  background $colorLight[0]
  box-shadow 0 1px 1px rgba($colorDark[0], .1)
  font-style italic

blockquote::before
  position absolute
  top -10px
  left 10px
  color lighten($colorAccent, 30%)
  content '\201C'
  font-size 4em

blockquote span
  display block
  margin-top .5em
  color $colorDark[1]
  text-align right
  font-size 80%

hr
  margin 1rem 0
  border none
  border-top 1px solid $colorLight[3]

dl,
ol,
ul
  margin-top 0
  padding-left 0
  list-style none
  dl,
  ol,
  ul
    margin 1rem 0 1rem 2rem
    font-size 90%

ol
  list-style decimal inside

ul
  list-style circle inside

fieldset,
input,
select,
textarea
  margin-bottom 1.5rem

blockquote,
dl,
figure,
form,
ol,
p,
pre,
table,
ul
  margin-bottom 1rem

p
  max-width 100%
  word-wrap break-word
  img
    max-width 100%
