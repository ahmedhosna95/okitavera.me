.container
  display block
  margin 0 auto
  padding 1rem
  max-width $containerMaxWidth
  width 100%

.row
  display flex
  flex-direction row
  flex-wrap wrap
  margin 0
  padding 0
  width 100%
  .col
    flex 1 1 auto
  .col-1of3
    flex-basis (100% / 3)
    width (100% / 3)

@media screen and (max-width: $flexTreshold)
  .row
    flex-flow column
    .col,
    .col-1of3
      flex-basis 100%
      width 100%
    &.ignore-mobile
      flex-flow row wrap

.fx-nowrap
  flex-wrap nowrap

.items-mid
  align-items center
  justify-content center

.items-stretch
  align-items stretch
