.me
  position relative
  display inline-block
  border-radius 50%
  line-height 1
  img
    display inline
    border-radius 50%
    line-height 1

@media screen and (max-width: $flexTreshold)
  .me
    margin-top 3rem

.article-index
  .row
    justify-content center
  .col
    flex 0 1 30%
    margin-bottom 1rem
    background-color $colorLight[0]
    img
      width 100%

.owo
  padding 1rem
  text-align center
  opacity 0
  &:hover
    opacity 1

.copyright
  padding-top 2rem
  text-transform uppercase
  letter-spacing 2px
  .jumps a
    padding 2px .6rem

.post-credit-wrapper
  display flex
  align-items center
  .post-credit
    display inline-block
    padding-left 1em
    > *
      clear-gaps()
    :first-child
      text-transform uppercase
      font-weight 700 !important
    :last-child
      color $colorDark[1]

.paper
  margin 0
  padding 4rem
  &.paper-art
    overflow hidden
    padding 0
    figure
      clear-gaps()
      padding 40% 0 0
      background-position top center
      background-size 100%
      background-repeat no-repeat
    .splash-credit
      display block
      overflow hidden
      padding 1rem
      text-align right
      text-overflow ellipsis
      white-space pre
      letter-spacing 1px
      font-size 60%
      a
        color $colorDark[1]
  &.paper-title
    h1,
    time
      text-transform uppercase
      font-weight 700
    h1
      max-width 90%
      font-weight 900
      font-size 3rem
      line-height 1.2
    time
      padding-left .1em
  &.paper-article
    overflow-x hidden
    padding-top 0
    padding-bottom 0
    >pre
      overflow-x auto
      margin-right -4rem
      margin-left -4rem
      padding-right 4rem
      padding-left 4rem
    h1,
    h2,
    h3,
    h4,
    h5,
    h6
      font-weight 700
      .direct-link
        position relative
        top -.2em
        visibility hidden
        color lighten($colorAccent, 30%)
        font-size .8em
      &:hover > .direct-link
        visibility visible

@media screen and (max-width: $flexTreshold)
  .paper
    padding 1.4rem
    &.paper-art
      figure
        padding-top (9 / 16) * 100%
        background-position center !important // no need to parallax on mobile
    &.paper-title h1
      font-size 2rem
    &.paper-article>pre
      overflow-x auto
      margin-right -1.4rem
      margin-left -1.4rem
      padding-right 1.4rem
      padding-left 1.4rem

.ovlogo-canvas
  display block
  margin 0
  padding 1rem 0
  svg
    max-width 512px
    max-height auto
    width 100%
    height auto
    transform rotate(-10deg)
    .L1,
    .L2
      animation dash 2s cubic-bezier(.6, .5, .8, .9) forwards
      stroke $colorAccent
      stroke-dasharray 400
      stroke-dashoffset 400
      stroke-opacity 1
    .L2
      animation dash 3s cubic-bezier(.4, .9, .9, .8) forwards
      animation-delay 1.78s
      stroke $colorLight[1]
      stroke-dasharray 544
      stroke-dashoffset 544
    .LSHDW
      opacity 0
      fill 0

@keyframes dash
  to
    stroke-dashoffset 0

.friends
  .col
    text-align center
    a
      position relative
      display inline-block
      margin 1rem
      img,
      span
        position relative
        display block
        width 128px
        height 128px
      span
        position absolute
        top 0
        left 0
        border-radius 50%
        background-color rgba($colorDark[0], .5)
        opacity 0
        transition .25s ease-out all
      b
        position relative
        top calc(128px / 2 - 1rem)
        color $colorLight[2]
        text-transform uppercase
      &:hover
        span
          opacity 1

.backtotop
  position fixed
  right 5rem
  bottom 5rem
  display flex
  visibility hidden
  justify-content center
  align-items center
  width 3rem
  height 3rem
  border-radius 50%
  background-color $colorAccent
  box-shadow 0 0 10px 0 rgba(0, 0, 0, .11)
  opacity 0
  transition .25s ease-out all
  i
    font-size 2rem
  &:hover
    background $colorDark[2]
  &:active,
  &:focus
    outline none
  &.show
    visibility visible
    opacity 1

// smoothly fade when imlazy image are appears
figure
  overflow hidden
  .imlazy
    opacity 0
    transition .05s ease-in all
    &.loaded
      opacity 1

@media screen and (max-width: $flexTreshold)
  .backtotop
    right 1rem
    bottom 2rem
  .ovlogo-canvas
    svg
      max-width 100%
      max-height auto
      width 100%
      height auto
  .start
    .row
      flex-direction row
