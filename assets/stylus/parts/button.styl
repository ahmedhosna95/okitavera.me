.btn,
button,
input[type='button'],
input[type='submit']
  display inline-block
  font-weight 400
  text-align center
  vertical-align middle
  user-select none
  background-color transparent
  border 1px solid $colorDark[1]
  padding .25rem 1rem
  font-size 1rem
  line-height 1.5
  border-radius 0
  margin 4px 2px
  vertical-align middle
  text-decoration none
  line-height inherit
  white-space nowrap
  cursor pointer
  &.btn-lg
    padding .35rem 1.2rem
    font-size 1.2rem
  &.btn-sm
    padding .15rem .8rem
    font-size .8rem
  &[disabled]
    opacity .5
    cursor default
  &.btn-rad
    border-radius 6px
  &:focus,
  &:hover
    outline none
    color inherit
    opacity .75
