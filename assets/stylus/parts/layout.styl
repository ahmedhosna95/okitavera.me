.wrapper
  display flex
  flex 1

@keyframes growX
  from
    transform scaleX(1)
  to
    transform scaleX(0)

.main-content
  position relative
  overflow-x hidden
  width 75%
  .main-cover
    position fixed
    top 0
    right 0
    z-index 9
    width calc(100% - 350px)
    height 100vh
    background #fff
    transform scaleX(1)
    transform-origin right
    animation growX cubic-bezier(.7, 0, .2, .7) .7s forwards
    animation-delay .15s

.sidebar
  z-index 10
  min-width 350px
  width 35%
  border-right 1px solid lighten($colorLight[4], 50%)
  background-color white
  .menu
    font-size 1.8rem
  .container
    position sticky
    top 0
    display flex
    flex-direction column
    justify-content center
    min-height 100vh
    .row
      flex-basis 100%
      width 100%
      a
        margin-right 1rem

.web-title
  text-transform uppercase
  font-weight 900
  font-size 2.4rem
  line-height 1.2

.main-footer
  margin-top auto // push the main footer to the bottom
  *
    font-size .7rem

@media screen and (max-width: $flexTreshold)
  .sidebar
    border-right 0
    border-bottom 1px solid lighten($colorLight[4], 50%)
  .sidebar,
  .main-content
    width 100%
  .wrapper
    flex-direction column
  .sidebar .container
    min-height unset
  .main-content
    .main-cover
      width 100%
