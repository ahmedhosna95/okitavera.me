.wrapper
  display flex
  flex 1

.main-content
  width 75%
  overflow-x hidden

.sidebar
  width 35%
  min-width 350px
  background-color white
  border-right 1px solid lighten($colorLight[4], 50%)
  .container
    position sticky
    top 0
    display flex
    flex-direction column
    justify-content center
    min-height 100vh
    .row
      width 100%
      flex-basis 100%
      a
        margin-right 1rem

.web-title
  text-transform uppercase
  font-weight 900
  font-size 2.4rem
  line-height 1.2

.main-footer
  margin-top auto // push the main footer to the bottom
  *
    font-size .7rem

@media screen and (max-width: $flexTreshold)
  .sidebar
    border-right 0
    border-bottom 1px solid lighten($colorLight[4], 50%)
  .sidebar,
  .main-content
    width 100%
  .wrapper
    flex-direction column
  .sidebar .container
    min-height unset
