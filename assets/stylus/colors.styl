$colorRed = #ff6d6d
$colorGreen = #e8f962
$colorBlue = #789cff
$colorYellow = #f9d171
$colorGreen = #6cf289
$colorPurple = #a86add
$colorCyan = #bee0ff
$colorAccent = $colorRed
$colorLight = #fafafa, #f5f5f5, #eeeeee, #e0e0e0, #bdbdbd
$colorDark = #212121, #424242, #616161, #757575, #9e9e9e

.bg-accent
  background-color $colorAccent

.txt-accent,
.txt-accent *
  color $colorAccent

for i in (0 .. 5)
  .bg-light{i}
    background-color $colorLight[i]
  .bg-dark{i}
    background-color $colorDark[i]
  .txt-light{i},
  .txt-light{i} *
    color $colorLight[i]
  .txt-dark{i},
  .txt-dark{i} *
    color $colorDark[i]
