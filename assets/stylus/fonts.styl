// --layout-features-='liga' and --no-hinting optimization
font-assets(n, f, w)
  font-weight w
  font-family n
  file = '/assets/fonts/' + f
  fwoff = file + '.woff'
  fwoff2 = file + '.woff2'
  src url(fwoff2) format('woff2'), url(fwoff) format('woff')

