---
permalink: /article/tags/{{ tag }}/
pagination:
  data: collections
  size: 1
  alias: tag
layout: plain.njk
renderData:
  title: Tagged “{{ tag }}”
---
{% set articles = collections[ tag ] %}
<section class="article-index">
  <div class="container pad-y0">
    <h1 class="center">
      <span>TAGGED</span><span class="txt-900">ARTICLES</span>
    </h1>
    <div class="center">
      {% for _tag in collections.tags %}
        <a href="/article/tags/{{ _tag }}" class="btn {% if tag == _tag %}{% else %} btn-outline{% endif %} btn-small txt-uppercase">{{ _tag }}</a>
      {% endfor %}
    </div>
    <div class="sp"></div>
    <div class="row">
    {% for post in articles | reverse %}
    <div class="col-1of3">
      <div class="card-wrapper"><div class="card">
      <a href="{{ post.url | url }}">
        <figure class="card-thumbnail bg-dark0">
        {% if post.data.splash.url %}
          <img class="imlazy" data-src="{{ post.data.splash.url }}">
        {% else %}
          <img class="imlazy" data-src="/assets/img/book.svg" height="100%">
        {% endif %}
        </figure>
        <div class="card-context">
          <time class="txt-smaller" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
          <div class="txt-dark2">{{ post.data.title }}</div>
        </div>
      </a>
      </div></div>
    </div>
    {% endfor %}
    </div>
  </div>
  <div class="sp sp-l"></div>
</section>
