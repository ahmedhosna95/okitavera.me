---
layout: plain.njk
permalink: /article/
title: Article Index
---
{% set articles = collections.posts %}
<section class="article-index">
  <div class="container">
    <h1 class="text-thin center">
      <span class="text-bigger">ALL<b>ARTICLES</b></span>
    </h1>
    <div class="row">
      {% for post in articles | reverse %}
      <div class="col-1of3">
        <div class="card-wrapper"><div class="card bg-light-0">
          <a href="{{ post.url | url }}">
              <figure class="card-thumbnail bg-dark-0">
              {% if post.data.splash.url %}
                <img class="imlazy" data-src="{{ post.data.splash.url | thumbnailURL }}">
              {% else %}
                <img class="imlazy" data-src="/assets/img/book.svg">
              {% endif %}
              </figure>
              <div class="card-context">
                <time class="text-smaller" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
                <div class="text-dark-2">{{ post.data.title }}</div>
              </div>
          </a>
        </div></div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
