<meta name="twitter:card" content="summary">
<meta name="twitter:site" content="{{ ('@' + metadata.author.twitter) or metadata.author.name }}">
<meta name="twitter:title" content="{{ renderData.title or title or metadata.title }}">
<meta name="twitter:description" content="{{ description or metadata.description or (metadata.author.name + Website') }}">
<meta name="twitter:image" content="{{ splash.url or metadata.author.photo }}">
<meta property="og:url" content="{{ metadata.url + page.url }}">
<meta property="og:site_name" content="{{ metadata.title }}">
<meta property="og:title" content="{{ renderData.title or title or metadata.title }}">
<meta property="og:description" content="{{ description or metadata.description or (metadata.author.name + Website') }}">
<meta property="og:image" content="{{ splash.url or metadata.author.photo }}" >
<meta property="og:type" content="website">
