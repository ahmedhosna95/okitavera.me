{% for tweets in twitter | head(4) %}
  <div class="row row--immutable padding--y-1">
    <div class="col--fit">
      <div class="icon-post" style="background-color: #38A1F3">
        <img src="/assets/img/twitter.svg" alt="article icon" width="32" height="32">
      </div>
    </div>
    <div class="col">
      <a href="https://twitter.com/{{ tweets.username }}">
        <b>{{ tweets.name }}</b>
        <span class="txt--dark2">@{{ tweets.username }}</span>
         Â· <span class="txt--dark2 twitter-date" data-date="{{ tweets.date }}">{{ tweets.date }}</span>
      </a>
      <p class="margin--y-0"><i>{{ tweets.text | nl2br | urlize | safe }}</i></p>
    </div>
  </div>
{% endfor %}
