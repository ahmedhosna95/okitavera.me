<header class="sidebar">
  <div class="container pad-y2">
    <div class="row">
      <div class="col pad-x1">
        <div class="me">
          <img height="180" width="180" alt="Prettiest human in the world" src="/assets/img/avatars/me.png">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col pad-x1">
        <h1 class="web-title">Nanda Okitavera</h1>
        <h3 class="web-desc">{{ metadata.description }}</h3>
      </div>
    </div>
    <div class="row">
      <div class="col menu pad-x1">
        <a aria-label="home" href="/">
          <i class="fea-home-light"></i>
        </a>
        <a aria-label="article" href="/article/">
          <i class="fea-book-open-light"></i>
        </a>
        <a aria-label="about-me" class="jumper" href="/about">
          <i class="fea-user-light"></i>
        </a>
        <a aria-label="twitter" href="{{ metadata.author.twitter }}">
          <i class="fea-twitter-light"></i>
        </a>
        <a aria-label="github" href="{{ metadata.author.github }}">
          <i class="fea-github-light"></i>
        </a>
      </div>
    </div>
  </div>
</header>
