---
layout: plain.njk
---
<section class="container padding--y-0 padding--x-0">
  <header class="paper paper__title">
    <h1>{{ title }}</h1>
    <time datetime="{{ date | htmlDateString }}">
      <i class="fea-calendar"></i>&nbsp;&nbsp;{{ date | readableDate }}</time>
      &nbsp;&nbsp;
      <span>
      <i class="fea-clock"></i>&nbsp;&nbsp;{{ content | getReadingTime("%M minutes to read") }}</span>
  </header>
  <div class="paper paper__art">
    {% if splash %}
      <img src="{{ splash.url }}" style="max-width:100%">
      {% if splash.credit %}
        <div class="paper__art__credit">{{ splash.credit | urlize | safe }}</div>
      {% endif %}
    {% endif %}
  </div>
</section>
<section class="container padding--y-0 padding--x-0">
  <article class="paper paper__article">
    {{ content | safe }}
    <br>
    <small>
      {% for tag in tags %}
        {%- if tag != "post" -%}
          <a href="/article/tags/{{ tag }}/" class="btn btn--sm txt--upper">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
    </small>
    <div class="spacer--2"></div>
  </article>
  <div class="hline"></div>
  <article class="paper paper__article">
    <div class="spacer--2"></div>
    <div class="row row--immutable">
      <div class="col--fit">
        <img class="circle" width="64" src="/assets/img/avatars/me.png"/>
      </div>
      <div class="col col--self-mid">
        <b class="margin--y-0 padding--x-1">WRITTEN BY</b>
        <h3 class="margin--y-0 padding--x-1">{{ metadata.author.name }}</h3>
      </div>
    </div>
    <div class="spacer--2"></div>
    {% if metadata.disqus.username and metadata.disqus.enable == "true" %}
      <div id="disqus_thread" class="center">
        <button id="disqus_loader" class="btn btn--outline bg--transparent txt--accent">View Comments</button>
      </div>
    {% endif %}
    <div class="spacer--2"></div>
  </article>
</section>
<div class="hline"></div>
<section class="container padding--x-2 padding--y-0">
  <h1 class="txt--300">Latest Content</h1>
  {% set posts = collections.posts | head(-3) %}
  {% include "postlist.njk" %}
  <div class="center padding--y-2">
    <a href="/article/" class="btn bg--accent txt--light1">View More</a>
  </div>
</section>
