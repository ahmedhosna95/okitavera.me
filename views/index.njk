---
layout: plain.njk
permalink: /
---
<div class="bg-light0">
  <section class="recent-article" id="recentarticles">
    <div class="container pad-x2">
      <h1 class="left txt-300">Latest Content</h1>
      {% set articles = collections.posts | head(-3) %}
      {% for post in articles | reverse %}
        <a href="{{ post.url | url }}">
          <div class="row pad-y1">
            <div class="col">
              <h2 class="mgn-y0">{{ post.data.title }}</h2>
              <div class="txt-dark2 txt-sm">
                <time datetime="{{ date | htmlDateString }}">
                  <i class="fea-calendar"></i>&nbsp;&nbsp;{{ post.date | readableDate }}</time>
              </div>
            </div>
          </a>
        {% endfor %}
        <div class="row center">
          <div class="col">
            <div class="sp"></div>
            <a href="/article/" class="btn bg-accent txt-light1">View More</a>
            <div class="sp"></div>
          </div>
        </div>
      </div>
    </section>
  </div>
  <div class="hl-80"></div>
