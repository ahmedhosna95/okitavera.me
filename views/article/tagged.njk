---
permalink: /article/tags/{{ tag }}/
pagination:
  data: collections
  size: 1
  alias: tag
layout: plain.njk
renderData:
  title: Tagged “{{ tag }}”
---
{% set articles = collections[tag] %}
<section class="article-index">
  <div class="container pad-x2 pad-y0">
    <h1 class="txt-300">Tagged Article</h1>
    {% for _tag in collections.tags %}
      <a href="/article/tags/{{ _tag }}/" class="btn {% if tag == _tag %}txt-light bg-accent{% endif %} btn-sm txt-uppercase">{{ _tag }}</a>
    {% endfor %}
    <div class="sp"></div>
    {% for post in articles | reverse %}
      <a href="{{ post.url | url }}">
        <div class="row pad-y1">
          <div class="col">
            <h2 class="mgn-y0">{{ post.data.title }}</h2>
            <div class="txt-dark2 txt-sm">
              <time datetime="{{ date | htmlDateString }}">
                <i class="fea-calendar"></i>&nbsp;&nbsp;{{ post.date | readableDate }}</time>
            </div>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
  <div class="sp sp-l"></div>
</section>
